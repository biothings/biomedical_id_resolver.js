{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": false,
    "composite": true,
    "noImplicitAny": false,
    "paths": {
      "biolink-model": ["../biolink-model"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "__tests__/"
  ],
  "references": [
    {
      "path": "../biolink-model"
    }
  ]
}
